{
  "name": "sm-calibration",
  "productName": "SmartMonster Calibration",
  "version": "1.0.0",
  "description": "Smartmonster Calibration App for Sensors and Meters",
  "main": "src/main/main.js",
  "type": "module",
  "engines": {
    "node": "v22.18.0"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start": "electron .",
    "start-dev": "nodemon --exec electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package-win": "npx electron-packager . HosemonsterCalibration --platform=win32 --arch=x64 --out=release-builds --overwrite --asar=false",
    "dist": "electron-builder --win",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "release": "release.bat"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeeshangulzar/calibration-app.git"
  },
  "author": "Abdullah",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeeshangulzar/calibration-app/issues"
  },
  "homepage": "https://github.com/zeeshangulzar/calibration-app#readme",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/electron": "^1.4.38",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^16.5.0",
    "handlebars": "^4.7.8"
  },
  "build": {
    "appId": "com.smartmonster.calibration.app",
    "productName": "SmartMonster Calibration",
    "win": {
      "icon": "src/assets/icons/win_logo.ico"
    },
    "files": [
      "**/*",
      "node_modules/**/*"
    ],
    "asar": false,
    "asarUnpack": [
      "node_modules/@abandonware/**",
      "resources/chromium/**"
    ],
    "extraFiles": [
      {
        "from": "node_modules/electron/dist/ffmpeg.dll",
        "to": "./"
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  }
}
